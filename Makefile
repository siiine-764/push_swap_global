$(LIBFT):
	@make -C libft
	@make -C libft bonus

clean:
	@rm -f $(OBJS)
	@make -C libft clean
	@echo "clean push_swap"

fclean: clean
	@make -C libft fclean
	@rm -f $(NAME)
	@echo "fclean push_swap"
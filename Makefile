NAME	= push_swap
CC		= gcc
CFLAGS 	= -Wall -Wextra -Werror
LIBFT	= libft/libft.a

SRCS =	./utils/ft_message_errors.c\
		push_swap.c\
		./functions_sort/ft_sa.c\
		./functions_sort/ft_sb.c\
		./functions_sort/ft_ss.c\
		./functions_sort/ft_pa.c\
		./functions_sort/ft_pb.c\

all: $(NAME)

OBJS = $(SRCS:.c=.o)

$(NAME) : $(OBJS) $(LIBFT)
		$(CC) $(CFLAGS) $(OBJS) $(LIBFT) -o $(NAME)
